{% apply spaceless %}
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}{{ title|default('Neverdesign.net') }}{% endblock %}
        </title>

        {# Mobile/Responsiveness #}
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:ital,wght@0,300;0,400;0,600;0,700;1,300&family=Source+Serif+Pro:wght@700&display=swap" rel="stylesheet">

        {% block analytics %}
        {% endblock %}

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {# Favicon #}
        <link rel="apple-touch-icon" sizes="57x57" href="/images/favicon/apple-icon-57x57.png">
        <link rel="apple-touch-icon" sizes="60x60" href="/images/favicon/apple-icon-60x60.png">
        <link rel="apple-touch-icon" sizes="72x72" href="/images/favicon/apple-icon-72x72.png">
        <link rel="apple-touch-icon" sizes="76x76" href="/images/favicon/apple-icon-76x76.png">
        <link rel="apple-touch-icon" sizes="114x114" href="/images/favicon/apple-icon-114x114.png">
        <link rel="apple-touch-icon" sizes="120x120" href="/images/favicon/apple-icon-120x120.png">
        <link rel="apple-touch-icon" sizes="144x144" href="/images/favicon/apple-icon-144x144.png">
        <link rel="apple-touch-icon" sizes="152x152" href="/images/favicon/apple-icon-152x152.png">
        <link rel="apple-touch-icon" sizes="180x180" href="/images/favicon/apple-icon-180x180.png">
        <link rel="icon" type="image/png" sizes="192x192"  href="/images/favicon/android-icon-192x192.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="96x96" href="/images/favicon/favicon-96x96.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon/favicon-16x16.png">
        <link rel="manifest" href="/images/favicon/manifest.json">
        <meta name="msapplication-TileColor" content="#141b22">
        <meta name="msapplication-TileImage" content="/images/favicon/ms-icon-144x144.png">
        <meta name="theme-color" content="#141b22">

        {# SEO - Executed on a page specific basis #}
        {% block seo %}
            <meta name="description" content="NeverDesign.net - The portfolio website of Jon de Araujo">
        {% endblock %}

        {# Blocking Javascript to be executed in the header #}
        {% block header_javascript %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body {{- ' class="%s" '|format( (bodyClass is defined ? ' ' ~ bodyClass) )|raw -}} {{ bodyAttributes is defined ? bodyAttributes|raw : '' }}>
    {# UI Header #}
    {% block header %}
        {% include 'partials/header.html.twig' %}
    {% endblock header %}

    {# UI Content #}
    <main id="content">
        {% block content %}
            {# Populated by extended Twigs #}
        {% endblock content %}
    </main>

    {# UI Footer #}
    {% block footer %}
        <div class="mobile-menu-toggle">
            <a class="menu-toggle" href="#" onclick="UI.toggleMenu(this); return false;" aria-label="Toggle Menu">
                <span class="menu-icon">
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                </span>
                <span class="text">Menu</span>
            </a>
        </div>

        <footer>
            <div class="footer-inner container">
                <div class="container-copyright">
                    <span>Copyright &copy; NeverDesign &mdash; {{ "now"|date("Y") }}  |  Background photograph from <a href="https://unsplash.com/@paul_nic?utm_content=creditCopyText&utm_medium=referral&utm_source=unsplash" rel="noreferrer">Unsplash</a></span>
                </div>
            </div>
        </footer>
    {% endblock footer %}

    {# Async Javascript to be executed in the footer #}
    {% block footer_javascript %}
        {% if app.environment != 'dev' %}
            {# Scripts - Prod #}
            {# <script src="/js/third-party/jquery-3.6.0.min.js"></script>
            <script src="/js/third-party/bootstrap.bundle.min.js"></script>
            <script src="/js/scripts-min.js"></script> #}

            {# Disable Javascript Debugging #}
            <script type="text/javascript">
                DEBUG_MODE = false;
            </script>

            <!-- Google Analytics -->
            <script>
                (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
                })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

                ga('create', 'UA-15463227-1', 'auto');
                ga('send', 'pageview');
            </script>
            <!-- End Google Analytics -->
        {% else %}
            {# Scripts - Dev #}
            {# <script src="/scripts/third-party/jquery-3.6.0.js"></script>
            <script src="/scripts/third-party/bootstrap.bundle.js"></script>
            <script src="/scripts/scripts.js"></script> #}
        {% endif %}
    {% endblock %}
    </body>
</html>
{% endapply %}
